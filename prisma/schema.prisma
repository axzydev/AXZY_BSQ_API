generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  lastName     String?
  email        String        @unique
  password     String
  role         Role          @default(USER)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  children     Child[]
  appointments Appointment[]
  daySchedules DaySchedule[]
  evaluations  Evaluation[]
}

enum Role {
  ADMIN
  USER
  COACH
}

model TrainingMode {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  coachCost   Float   @default(0)
  description String?
  isActive    Boolean @default(true)

  schedules    DaySchedule[]
  appointments Appointment[]
}

model DaySchedule {
  id        Int      @id @default(autoincrement())
  date      DateTime
  startTime DateTime
  endTime   DateTime
  capacity  Int
  modeId    Int
  coachId   Int? // Optional for now to support legacy data, or existing

  mode         TrainingMode  @relation(fields: [modeId], references: [id])
  coach        User?         @relation(fields: [coachId], references: [id])
  appointments Appointment[]

  @@unique([date, startTime, endTime, coachId, modeId])
}

model Appointment {
  id         Int      @id @default(autoincrement())
  userId     Int
  childId    Int
  scheduleId Int
  modeId     Int
  createdAt  DateTime @default(now())

  user     User         @relation(fields: [userId], references: [id])
  child    Child        @relation(fields: [childId], references: [id])
  schedule DaySchedule  @relation(fields: [scheduleId], references: [id])
  mode     TrainingMode @relation(fields: [modeId], references: [id])
}

model Child {
  id        Int       @id @default(autoincrement())
  name      String
  lastName  String?
  birthDate DateTime?
  userId    Int

  user         User          @relation(fields: [userId], references: [id])
  appointments Appointment[]
  evaluations  Evaluation[]
}

// ---------------------------
//  EVALUATIONS MODULE
// ---------------------------

model Evaluation {
  id       Int      @id @default(autoincrement())
  childId  Int
  coachId  Int
  date     DateTime @default(now())
  age      Int?
  category String? // Infantil, Juvenil, etc
  notes    String? // Observaciones generales del coach

  child Child @relation(fields: [childId], references: [id])
  coach User  @relation(fields: [coachId], references: [id])

  swingMetrics     SwingMetric[]
  technicalRatings TechnicalRating[]
  developmentLogs  DevelopmentLog[]

  createdAt DateTime @default(now())
}

enum SwingLevel {
  BASE
  OPTIMO
  ELITE
}

model SwingMetric {
  id           Int        @id @default(autoincrement())
  evaluationId Int
  level        SwingLevel
  speedMph     Float

  evaluation Evaluation @relation(fields: [evaluationId], references: [id])

  @@unique([evaluationId, level])
}

model TechnicalArea {
  id   Int    @id @default(autoincrement())
  name String @unique

  ratings TechnicalRating[]
}

enum TechnicalLevel {
  BAJO
  MEDIO
  ALTO
}

enum ProgressIndicator {
  PROGRESO
  ESTABLE
  ATENCION
}

model TechnicalRating {
  id           Int               @id @default(autoincrement())
  evaluationId Int
  areaId       Int
  level        TechnicalLevel
  indicator    ProgressIndicator

  evaluation Evaluation    @relation(fields: [evaluationId], references: [id])
  area       TechnicalArea @relation(fields: [areaId], references: [id])

  @@unique([evaluationId, areaId])
}

model DevelopmentLog {
  id           Int               @id @default(autoincrement())
  evaluationId Int
  date         DateTime
  age          Int?
  comments     String
  indicator    ProgressIndicator

  evaluation Evaluation @relation(fields: [evaluationId], references: [id])
}
